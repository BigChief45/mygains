= simple_form_for(@exercise) do |f|
    
    .form-group
        = f.input :name, label: 'Exercise Name', input_html: { class: 'form-control' }
        
    .form-group
        = f.input :description, label: 'Description', input_html: { class: 'form-control' }
        
    .form-group
        = f.input :image, as: :file
    
    .form-group
        = f.submit ( f.object.new_record? ? "Add Exercise" : "Save Changes"), class: 'btn btn-success'
    
    = link_to exercises_path do
        %span.glyphicon.glyphicon-arrow-left
        Back