= simple_form_for(@exercise) do |f|
    
    .form-group
        = f.input :name, label: 'Exercise Name', input_html: { class: 'form-control' }
        
    .form-group
        = f.input :description, label: 'Description', input_html: { class: 'form-control' }
        
    .form-group
        = f.button :submit, 'Add Exercise', class: 'btn btn-primary'