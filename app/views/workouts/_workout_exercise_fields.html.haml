.nested-fields
    
    .panel.panel-default
        .panel-body
    
            .row
                .form-group
                    .col-md-4
                        %h4 Exercise
                        = f.collection_select(:exercise_id, current_user.exercises.all, :id, :name, {}, { class: 'form-control input-sm'})
                    .col-md-8
                        %h4 Training Style
                        = f.collection_select(:training_type_id, current_user.training_types.all, :id, :name, {}, { class: 'form-control input-sm'})
        
            %h4 Sets
            #exercise_sets
                = f.simple_fields_for :exercise_sets do |set|
                    = render 'exercise_set_fields', :f => set
                
                .links
                    = link_to_add_association 'Add Set', f, :exercise_sets
    
    %br
    
    = link_to_remove_association "Remove Exercise", f
    
    %hr
    